{
  "name": "firm-client",
  "version": "0.1.5",
  "description": "Web Serial + Rust WASM client reading data packets from FIRM",
  "license": "MIT",
  "type": "module",
  "main": "typescript/dist/index.js",
  "module": "typescript/dist/index.js",
  "types": "typescript/dist/index.d.ts",
  "files": [
    "typescript/dist",
    "pkg/firm_client.js",
    "pkg/firm_client_bg.js",
    "pkg/firm_client_bg.wasm",
    "pkg/firm_client.d.ts",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "clean": "rimraf pkg typescript/dist",
    "build:wasm": "wasm-pack build --target web --out-dir pkg --out-name firm_client --no-default-features --features wasm",
    "build:ts": "cd typescript && tsc",
    "build": "npm run build:wasm && npm run build:ts",
    "prepare": "npm run build",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "prettier": "^3.7.4",
    "rimraf": "^6.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.50.0"
  }
}
